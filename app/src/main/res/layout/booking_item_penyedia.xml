<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/abuabu">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/all_ic_boy"
        android:layout_centerVertical="true"
        android:id="@+id/profile_img_booking_penyedia"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        app:civ_border_color="#05df29"
        android:id="@+id/on_img_booking_penyedia"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        android:layout_below="@id/username_browse_booking_penyedia"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-15dp"
        android:layout_toRightOf="@id/profile_img_booking_penyedia"
        android:layout_toEndOf="@id/profile_img_booking_penyedia"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        app:civ_border_color="#bfbfbf"
        android:id="@+id/off_img_booking_penyedia"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_below="@id/username_browse_booking_penyedia"
        android:layout_marginLeft="-15dp"
        android:layout_toRightOf="@id/profile_img_booking_penyedia"
        android:layout_toEndOf="@id/profile_img_booking_penyedia"/>


    <TextView
        android:id="@+id/username_browse_booking_penyedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/profile_img_booking_penyedia"
        android:layout_toRightOf="@id/profile_img_booking_penyedia"
        android:fontFamily="@font/poppins_regular"
        android:text="username"
        android:textColor="@color/black2"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Nomor Hp/WA"
        android:id="@+id/hp_browse_booking_penyedia"
        android:layout_toRightOf="@id/profile_img_booking_penyedia"
        android:layout_toEndOf="@id/profile_img_booking_penyedia"
        android:layout_below="@+id/username_browse_booking_penyedia"
        android:layout_marginTop="3dp"
        android:textColor="@color/black2"
        android:layout_marginLeft="10dp"
        android:textSize="13sp"
        />

    <ImageView
        android:id="@+id/to_chats_booking_penyedia"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/right_arrow"
        tools:ignore="VectorDrawableCompat" />


</RelativeLayout>